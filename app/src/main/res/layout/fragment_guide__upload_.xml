<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Guide_Upload_Fragment"
    android:background="#55828B">

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/comfortaa_light"
        android:text="Guide Upload"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/label"
        android:layout_below="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Please fill all fields!"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/log_mood"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:spinnerMode="dialog"
        android:layout_below="@+id/label"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/Guide_title"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/log_mood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:drawableStart="@drawable/ic_title"
        android:drawablePadding="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Title"
        android:padding="15dp"
        android:textColor="#fff" />


    <EditText
        android:id="@+id/Guide_time"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Guide_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:drawableStart="@drawable/ic_clock"
        android:drawablePadding="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Time"
        android:padding="15dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/Guide_body"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/Guide_time"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:drawableStart="@drawable/ic_body"
        android:drawablePadding="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Body"
        android:padding="15dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/Guide_author"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/Guide_body"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Author"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/Guide_enter"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Guide_author"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E63946"
        android:elevation="20dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Upload New Guide"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        app:cornerRadius="15dp" />

</RelativeLayout>